<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_teal"
    android:padding="24dp"
    tools:context=".AdminLoginActivity">

    <ImageView
        android:id="@+id/ivAdminLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_main_logo"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Portal"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAdminLogo" />

    <TextView
        android:id="@+id/tvAdminSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authorized Personnel Only"
        android:textColor="@color/accent_red"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdminTitle" />

    <EditText
        android:id="@+id/etAdminEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_input"
        android:hint="Admin Email"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAdminSubtitle" />

    <EditText
        android:id="@+id/etAdminPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_input"
        android:hint="Password"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAdminEmail" />

    <Button
        android:id="@+id/btnAdminLogin"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/card_sage"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAdminPassword" />

    <TextView
        android:id="@+id/tvBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not an admin? Go back"
        android:textColor="@color/text_hint"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdminLogin" />

    <TextView
        android:id="@+id/tvAdminRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Staff? Request Access"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBackToHome" />

</androidx.constraintlayout.widget.ConstraintLayout>