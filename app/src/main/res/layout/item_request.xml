<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivRequestImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_no_preview"
            android:background="#F0F0F0"
            app:shapeAppearanceOverlay="@style/rounded_image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvRequestCatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cat Name"
                android:textColor="@color/primary_teal"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvRequestEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@email.com"
                android:textColor="#555555"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvRequestStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/accent_red"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnReject"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_delete"
                android:background="@drawable/rounded_input"
                android:backgroundTint="#FFEBEE"
                app:tint="@color/accent_red"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btnApprove"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_check"
                android:background="@drawable/rounded_input"
                android:backgroundTint="#E0F2F1"
                app:tint="@color/primary_teal"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>